<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="200" minWidth="340" prefHeight="200" prefWidth="340" style="-fx-background-color: lightgrey" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bananacore.epic.InfoController">
    <fx:include fx:id="fuel" source="fuel.fxml" />
    <fx:include fx:id="speed" source="speed.fxml" />
    <center>
        <GridPane fx:id="infoSettingsPane" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="256.0" minWidth="10.0" prefWidth="220.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="165.0" minWidth="10.0" prefWidth="61.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <CheckBox fx:id="displayFuelCheckbox" mnemonicParsing="false" GridPane.columnIndex="1" />
                <CheckBox fx:id="displaySpeedCheckbox" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="saveSettingsButton" mnemonicParsing="false" onAction="#saveSettings" text="Save" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Display Speed" GridPane.rowIndex="1">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Text>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Display Fuel">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Switching Interval" GridPane.rowIndex="2">
               <font>
                  <Font size="25.0" />
               </font>
            </Text>
            <Spinner fx:id="intervalSpinner" prefHeight="25.0" prefWidth="73.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
    </center>
   <right>
      <Button fx:id="infoSettingsButton" mnemonicParsing="false" onAction="#infoSettings" text="Settings" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
